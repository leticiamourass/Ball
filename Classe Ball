public class Ball {
    private float x, y;
    private int radius;
    private float speed, directionInDegree; // speed (magnitude) and direction in degrees
    private float xDelta, yDelta; // deltas in cartesian coordinates

    // Constructor using cartesian deltas
    public Ball(float x, float y, int radius, float xDelta, float yDelta) {
        this.x = x;
        this.y = y;
        this.radius = radius;
        this.xDelta = xDelta;
        this.yDelta = yDelta;
    }

    // Constructor using polar coordinates (speed and direction)
    public Ball(float x, float y, int radius, int speed, int directionInDegree) {
        this.x = x;
        this.y = y;
        this.radius = radius;
        this.speed = speed;
        this.directionInDegree = directionInDegree;
        // Convert polar to cartesian coordinates
        this.xDelta = (float) (speed * Math.cos(Math.toRadians(directionInDegree)));
        this.yDelta = (float) (speed * Math.sin(Math.toRadians(directionInDegree)));
    }

    // Getters and setters
    public float getX() { return x; }
    public void setX(float x) { this.x = x; }

    public float getY() { return y; }
    public void setY(float y) { this.y = y; }

    public int getRadius() { return radius; }
    public void setRadius(int radius) { this.radius = radius; }

    public float getXDelta() { return xDelta; }
    public void setXDelta(float xDelta) { this.xDelta = xDelta; }

    public float getYDelta() { return yDelta; }
    public void setYDelta(float yDelta) { this.yDelta = yDelta; }

    public int getSpeed() { return (int) speed; }
    public int getDirectionInDegree() { return (int) directionInDegree; }

    // Move the ball
    public void move() {
        x += xDelta;
        y += yDelta;
    }

    // Reflect horizontally (reverse x direction)
    public void reflectHorizontal() {
        xDelta = -xDelta;
    }

    // Reflect vertically (reverse y direction)
    public void reflectVertical() {
        yDelta = -yDelta;
    }

    // toString method to represent the Ball object
    @Override
    public String toString() {
        return String.format("Ball[(%.1f,%.1f),speed=(%.1f,%.1f)]", x, y, xDelta, yDelta);
    }
}
